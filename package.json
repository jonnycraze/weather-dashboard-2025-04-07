{
  "name": "weather-dashboard",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "playwright": "playwright test",
    "playwright:debug": "playwright test --debug",
    "test:e2e:dev": "vite --port 5175",
    "test:e2e:test": "wait-on http://localhost:5175 && playwright test",
    "test:e2e": "npm run kill-port && concurrently \"npm run test:e2e:dev\" \"npm run test:e2e:test\"",
    "typecheck": "tsc",
    "kill-port": "lsof -ti:5175 | xargs kill -9 || true",
    "nuke": "rm -rf node_modules .vite dist package-lock.json && npm cache clean --force && npm install",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "chart.js": "^4.4.6",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@playwright/test": "^1.34.3",
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/react-helmet": "^6.1.11",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.37.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "jsdom": "^26.0.0",
    "playwright": "^1.34.3",
    "postcss": "^8.4.38",
    "prettier": "^3.5.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.2.5",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^1.4.0",
    "wait-on": "^8.0.1"
  }
}
